@model TARS.Models.tbl_customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Record_Update</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

    <h2 class="font-weight-bold text-center mt-5">Parcel Update</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.c_id)
            @Html.HiddenFor(model => model.e_id)
            @Html.HiddenFor(model => model.date)
            @Html.HiddenFor(model => model.delivery)
            @Html.HiddenFor(model => model.total)
            @Html.HiddenFor(model => model.item_weight)
            @Html.HiddenFor(model => model.services)

            @Html.HiddenFor(model => model.c_name)
            @Html.HiddenFor(model => model.c_address)
            @Html.HiddenFor(model => model.c_contact)
            @Html.HiddenFor(model => model.c_city)
            @Html.HiddenFor(model => model.c_postalcode)
            @Html.HiddenFor(model => model.c_CNIC)

            @Html.HiddenFor(model => model.r_name)
            @Html.HiddenFor(model => model.r_address)
            @Html.HiddenFor(model => model.r_contact)
            @Html.HiddenFor(model => model.r_city)
            @Html.HiddenFor(model => model.r_postalcode)
            @Html.HiddenFor(model => model.r_CNIC)




            <div class="form-group mt-5">
                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "form_label" })
                <div>
                    @Html.DropDownListFor(model => model.status, new SelectList(new[] { "Way To Destinition", "Delivered","Delivered and Paid" }), new { @class = "form_input" })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary px-5 py-2" />
                </div>
            </div>
        </div>
    }



    


</body>
</html>

